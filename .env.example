# Servidor XMPP (domínio do JID)
SERVER=xmpp.seudominio.com

# Host/porta reais (se o domínio do JID não resolver via SRV)
HOST=                  # ex: 192.168.1.50  (opcional)
PORT=5222

# Senha padrão dos agentes (troque!)
PASSWORD=changeme

# Prefixo para diferenciar máquinas (ex.: "" no PC, "nb-" no notebook)
RUN_PREFIX=

# Parâmetros da simulação
N_CITIZENS=40
N_CANDIDATES=3
N_TICKS=5

# Segurança TLS (use false para cert self-signed; true no ideal)
VERIFY_SECURITY=false

# Ativar logs detalhados de aioxmpp (debug)
XMPP_DEBUG=false